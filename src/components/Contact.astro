---
// src/components/Contact.astro
import { getLangFromUrl, useTranslations } from '../i18n/languages';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="contact-section">
  <div class="container">
    <div class="section-header text-center">
      <h2>{t('contact.title')}</h2>
      <p class="section-description">
        {t('contact.subtitle')}
      </p>
    </div>

    <div class="contact-content">
      <div class="contact-card glass glass-hover" data-aos="fade-up">
        <div class="contact-icon">
          <i class="fas fa-envelope"></i>
        </div>
        
        <h3>{t('contact.email')}</h3>
        <p>{t('contact.email_desc')}</p>
        <a href="mailto:deniscazzulo@icloud.com" class="contact-link">
          deniscazzulo@icloud.com
        </a>
      </div>

      <div class="social-section glass glass-hover" data-aos="fade-up" data-aos-delay="200">
        <h3>{t('contact.social')}</h3>
        <p class="social-description">{t('contact.social_desc')}</p>
        <div class="social-grid">
          <a href="https://www.linkedin.com/in/denis-cazzulo-b56b551a9/" target="_blank" rel="noopener noreferrer" class="social-card">
            <div class="social-icon linkedin">
              <i class="fab fa-linkedin-in"></i>
            </div>
            <div class="social-info">
              <span class="social-name">{t('contact.linkedin')}</span>
              <span class="social-desc">{t('contact.linkedin_desc')}</span>
            </div>
          </a>
          <a href="https://github.com/deniscazz" target="_blank" rel="noopener noreferrer" class="social-card">
            <div class="social-icon github">
              <i class="fab fa-github"></i>
            </div>
            <div class="social-info">
              <span class="social-name">{t('contact.github')}</span>
              <span class="social-desc">{t('contact.github_desc')}</span>
            </div>
          </a>
        </div>
      </div>
    </div>

    <div class="cta-section text-center" data-aos="fade-up" data-aos-delay="400">
      <div class="cta-content glass">
        <h3>Pronto a iniziare?</h3>
        <p>Trasformiamo le tue idee in realt√† digitale</p>
        <a href="mailto:deniscazzulo@icloud.com" class="btn btn-primary btn-lg">
          <i class="fas fa-rocket"></i>
          Iniziamo il Progetto
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    background: var(--bg-primary);
    position: relative;
    overflow: hidden;
    padding: var(--space-24) 0;
  }

  .section-header {
    margin-bottom: var(--space-20);
  }

  .section-description {
    max-width: 600px;
    margin: 0 auto;
    font-size: 1.125rem;
    color: var(--text-secondary);
  }

  .contact-content {
    max-width: 900px;
    margin: 0 auto var(--space-20);
  }

  .contact-card {
    padding: var(--space-16);
    border-radius: var(--radius-xl);
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .contact-icon {
    margin-bottom: var(--space-6);
  }

  .contact-icon i {
    font-size: 3rem;
    color: var(--primary);
    padding: var(--space-6);
    background: var(--bg-tertiary);
    border-radius: 50%;
    border: 2px solid var(--border-primary);
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }

  .contact-card h3 {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-3);
  }

  .contact-card p {
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
    font-size: 1.125rem;
  }

  .contact-link {
    display: inline-block;
    color: var(--primary);
    text-decoration: none;
    font-size: 1.125rem;
    font-weight: 600;
    padding: var(--space-4) var(--space-6);
    border: 2px solid var(--primary);
    border-radius: var(--radius-lg);
    transition: all var(--transition-normal);
    background: transparent;
    word-break: break-all;
    max-width: 100%;
  }

  .contact-link:hover {
    background: var(--primary);
    color: var(--bg-primary);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0, 217, 255, 0.3);
  }

  .social-section {
    text-align: center;
    margin-bottom: var(--space-20);
    padding: var(--space-16);
    border-radius: var(--radius-xl);
  }

  .social-section h3 {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-3);
  }

  .social-description {
    color: var(--text-secondary);
    margin-bottom: var(--space-8);
    font-size: 1.125rem;
  }

  .social-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
    max-width: 600px;
    margin: 0 auto;
  }

  .social-card {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--border-primary);
    color: var(--text-primary);
    text-decoration: none;
    transition: all var(--transition-normal);
    backdrop-filter: blur(10px);
  }

  .social-card:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--primary);
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 217, 255, 0.15);
  }

  .social-icon {
    width: 50px;
    height: 50px;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
    transition: all var(--transition-normal);
  }

  .social-icon.linkedin {
    background: linear-gradient(135deg, #0077b5, #00a0dc);
    color: white;
  }

  .social-icon.github {
    background: linear-gradient(135deg, #333, #666);
    color: white;
  }

  .social-card:hover .social-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .social-info {
    flex: 1;
    text-align: left;
  }

  .social-name {
    display: block;
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--text-primary);
    margin-bottom: var(--space-1);
  }

  .social-desc {
    display: block;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .cta-section {
    margin-top: var(--space-16);
  }

  .cta-content {
    max-width: 500px;
    margin: 0 auto;
    padding: var(--space-12) var(--space-8);
    border-radius: var(--radius-xl);
  }

  .cta-content h3 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .cta-content p {
    color: var(--text-secondary);
    margin-bottom: var(--space-8);
    font-size: 1.125rem;
  }

  .btn-lg {
    font-size: 1.125rem;
    font-weight: 600;
    padding: var(--space-4) var(--space-8);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    white-space: nowrap;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .contact-card {
      padding: var(--space-8) var(--space-6);
    }

    .social-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .social-card {
      padding: var(--space-4);
    }

    .social-icon {
      width: 45px;
      height: 45px;
      font-size: 1.25rem;
    }

    .cta-content {
      padding: var(--space-8) var(--space-6);
    }

    .cta-content h3 {
      font-size: 1.75rem;
    }

    .btn-lg {
      font-size: 1rem;
      padding: var(--space-3) var(--space-6);
    }
  }
</style>