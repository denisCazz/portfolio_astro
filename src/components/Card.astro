---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<div class="card-content">
			<h2>
				{title}
				<span>&rarr;</span>
			</h2>
			<p>
				{body}
			</p>
		</div>
	</a>
</li>
<style>
	:root {
		--accent-gradient: linear-gradient(45deg, #4ca1af, #c4e0e5); /* Modern gradient */
		--accent-light: 240, 240, 240; /* Light grey */
	}

	.link-card {
		color: rgba(240, 240, 240, 0.9); /* Light grey */
		background-color: rgba(34, 40, 49, 0.8); /* Modern dark blue-grey */
		border-radius: 12px; /* More rounded corners */
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2); /* Deeper shadow */
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		font-family: 'Roboto', sans-serif; /* Modern font */
		overflow: hidden; /* Ensure content stays within rounded corners */
	}

	.link-card a {
		display: block;
		text-decoration: none; /* Remove underline from links */
		color: inherit; /* Inherit text color */
	}

	.card-content {
		padding: 1.5rem; /* Add padding inside the card */
	}

	h2 {
		margin: 0;
		font-size: 1.5rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		color: rgba(240, 240, 240, 0.9); /* Light grey */
		font-family: 'Courier New', Courier, monospace; /* Typewriter font */
	}

	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: rgba(240, 240, 240, 0.9); /* Light grey */
		font-family: 'Roboto', sans-serif; /* Modern font */
	}

	.link-card:is(:hover, :focus-within) {
		transform: scale(1.05);
		box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3); /* Deeper shadow on hover */
		background-image: var(--accent-gradient); /* Colorful gradient on hover */
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}

	.link-card:is(:hover, :focus-within) p {
		color: rgb(var(--accent-light));
	}
</style>