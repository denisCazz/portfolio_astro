// src/components/WorkExperience.astro
const experiences = [
  {
    id: "tesisquare",
    title: "Supply Chain IT Developer",
    company: "Tesisquare",
    location: "Italia",
    period: "2021 - Presente",
    type: "Full-time",
    description: "Sviluppatore software specializzato in soluzioni per la gestione della supply chain, con particolare attenzione alla logistica e al trasporto merci. Responsabile dello sviluppo di applicazioni enterprise per l'ottimizzazione dei processi logistici.",
    responsibilities: [
      "Sviluppo di applicazioni web per la gestione della supply chain",
      "Integrazione di sistemi ERP e WMS",
      "Ottimizzazione dei processi logistici attraverso soluzioni IT",
      "Collaborazione con team internazionali"
    ],
    technologies: ["JavaScript", "Python", "SQL", "Oracle", "Cloud Services"],
    icon: "fas fa-truck",
    color: "var(--secondary)"
  },
  {
    id: "freelance",
    title: "Freelance Web Developer",
    company: "Progetti Personali",
    location: "Remote",
    period: "2019 - Presente",
    type: "Part-time",
    description: "Realizzazione di siti web personalizzati per piccole e medie imprese, con focus su design moderno, performance e user experience. Specializzato in soluzioni full-stack innovative.",
    responsibilities: [
      "Progettazione e sviluppo di siti web responsive",
      "Consulenza tecnica e strategica per clienti",
      "Implementazione di soluzioni e-commerce",
      "Ottimizzazione SEO e performance"
    ],
    technologies: ["React", "Vue.js", "Node.js", "Astro", "TypeScript"],
    icon: "fas fa-laptop-code",
    color: "var(--accent)"
  }
];

const clientProjects = [
  {
    name: "LangAmore Pollenzo",
    description: "Sito web elegante per attivit√† gastronomica locale con focus su tradizione e qualit√†",
    url: "https://www.langamorepollenzo.it/",
    image: "üç∑",
    technologies: ["WordPress", "PHP", "Custom CSS"]
  },
  {
    name: "Sartoria Kristina",
    description: "Portale moderno per sartoria con design personalizzato e gallery interattiva",
    url: "https://sartoriakristina.it/",
    image: "‚úÇÔ∏è",
    technologies: ["HTML5", "CSS3", "JavaScript"]
  }
