---
import { getLangFromUrl, useTranslations } from '../i18n/languages';
import { getImagePath } from '../utils/paths';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const projects = [
  {
    id: 'bitora',
    title: t('project1.title'),
    image: getImagePath('wip.jpg'),
    challenge: t('project1.challenge_desc'),
    solution: t('project1.solution_desc'),
    impact: t('project1.impact_desc'),
    techStack: t('project1.tech_list'),
    link: 'https://bitora.it/',
    github: null,
    featured: true
  },
  {
    id: 'enterprise-ai',
    title: t('project2.title'),
    image: getImagePath('tesseract.webp'),
    challenge: t('project2.challenge_desc'),
    solution: t('project2.solution_desc'),
    impact: t('project2.impact_desc'),
    techStack: t('project2.tech_list'),
    link: null,
    github: null,
    featured: true
  }
];

const additionalProjects = [
  {
    title: "LangAmore Pollenzo",
    description: lang === 'en' ? "Elegant Guest House in Piedmont with modern, user-friendly website. Responsive design optimized for conversions and excellent user experience." : "Guest House elegante in Piemonte con sito web moderno e user-friendly. Design responsivo ottimizzato per conversioni e esperienza utente eccellente.",
    image: getImagePath('langamore.jpg'),
    tags: ["Astro", "Tailwind CSS", "SEO", "Responsive"],
    link: "https://www.langamorepollenzo.it/",
    github: null,
    featured: false
  },
  {
    title: "Sartoria Kristina",
    description: lang === 'en' ? "Elegant showcase website for artisan tailoring. Focus on storytelling, visual portfolio and local search engine optimization." : "Sito vetrina elegante per sartoria artigianale. Focus su storytelling, portfolio visivo e ottimizzazione per motori di ricerca locali.",
    image: getImagePath('sartoria.png'),
    tags: ["Astro", "Tailwind CSS", "Local SEO", "Portfolio"],
    link: "https://sartoriakristina.it/",
    github: null,
    featured: false
  }
];

const techStack = [
  "React", "Vue.js", "Astro", "Next.js", "TypeScript", "Python", 
  "Node.js", "PostgreSQL", "MongoDB", "AWS", "Docker", "AI/ML"
];
---

<section id="projects" class="projects-section">
  <div class="container">
    <div class="section-header text-center">
      <h2>{t('projects.title')}</h2>
      <p class="section-description">
        {t('projects.subtitle')}
      </p>
    </div>

    <!-- Main Case Studies -->
    <div class="case-studies">
      {projects.map((project, index) => (
        <article class="case-study glass glass-hover" data-aos="fade-up" data-aos-delay={index * 200}>
          <div class="case-study-header">
            <h3 class="case-study-title">{project.title}</h3>
            {project.featured && (
              <span class="featured-badge">
                <i class="fas fa-star"></i>
                Featured
              </span>
            )}
          </div>

          <div class="case-study-content">
            <div class="case-study-section">
              <h4 class="section-title">
                <i class="fas fa-exclamation-triangle"></i>
                {project.id === 'bitora' ? t('project1.challenge') : t('project2.challenge')}
              </h4>
              <p>{project.challenge}</p>
            </div>

            <div class="case-study-section">
              <h4 class="section-title">
                <i class="fas fa-lightbulb"></i>
                {project.id === 'bitora' ? t('project1.solution') : t('project2.solution')}
              </h4>
              <p>{project.solution}</p>
            </div>

            <div class="case-study-section">
              <h4 class="section-title">
                <i class="fas fa-chart-line"></i>
                {project.id === 'bitora' ? t('project1.impact') : t('project2.impact')}
              </h4>
              <div class="impact-content">
                {project.impact.split('\n').map((line: string) => (
                  line.trim() && <p class="impact-item">{line}</p>
                ))}
              </div>
            </div>

            <div class="case-study-section">
              <h4 class="section-title">
                <i class="fas fa-tools"></i>
                {project.id === 'bitora' ? t('project1.tech_stack') : t('project2.tech_stack')}
              </h4>
              <div class="tech-tags">
                {project.techStack.split(', ').map((tech) => (
                  <span class="tech-tag">{tech}</span>
                ))}
              </div>
            </div>
          </div>

          {project.link && (
            <div class="case-study-footer">
              <a 
                href={project.link} 
                target="_blank" 
                rel="noopener noreferrer"
                class="btn btn-primary"
              >
                <i class="fas fa-external-link-alt"></i>
                {t('common.view_project')}
              </a>
            </div>
          )}
        </article>
      ))}
    </div>

    <!-- Additional Projects -->
    <div class="additional-projects">
      <h3 class="additional-title">{lang === 'en' ? 'Other Projects' : 'Altri Progetti'}</h3>
      <div class="projects-grid">
        {additionalProjects.map((project, index) => (
          <article class="project-card glass glass-hover" data-aos="fade-up" data-aos-delay={index * 200}>
            <div class="project-image-container">
              <img 
                src={project.image} 
                alt={project.title} 
                class="project-image"
                loading="lazy" 
              />
              <div class="project-overlay">
                <div class="project-links">
                  <a 
                    href={project.link} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="btn btn-primary btn-sm"
                  >
                    <i class="fas fa-external-link-alt"></i>
                    {t('common.live_demo')}
                  </a>
                </div>
              </div>
            </div>
            
            <div class="project-content">
              <h4 class="project-title">{project.title}</h4>
              <p class="project-description">{project.description}</p>
              <div class="project-tags">
                {project.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>

    <!-- Tech Stack Section -->
    <div class="tech-stack-section">
      <h3 class="tech-stack-title text-center">{lang === 'en' ? 'Technologies I Use' : 'Tecnologie che utilizzo'}</h3>
      <div class="tech-stack-grid">
        {techStack.map((tech, index) => (
          <div 
            class="tech-item" 
            data-aos="fade-in" 
            data-aos-delay={index * 50}
          >
            {tech}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .projects-section {
    background: var(--bg-primary);
    padding: var(--space-20) 0;
    position: relative;
  }

  /* Case Studies Styles */
  .case-studies {
    margin-bottom: var(--space-16);
  }

  .case-study {
    max-width: 900px;
    margin: 0 auto var(--space-12);
    padding: var(--space-8);
    border-radius: var(--radius-lg);
  }

  .case-study-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-4);
    border-bottom: 2px solid var(--border-light);
  }

  .case-study-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
  }

  .case-study-section {
    margin-bottom: var(--space-6);
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--primary);
    margin-bottom: var(--space-3);
  }

  .section-title i {
    font-size: 1rem;
  }

  .case-study-section p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .impact-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .impact-item {
    position: relative;
    padding-left: var(--space-4);
    color: var(--text-primary) !important;
    font-weight: 500;
  }

  .impact-item::before {
    content: 'â–¸';
    position: absolute;
    left: 0;
    color: var(--primary);
    font-weight: bold;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-3);
  }

  .tech-tag {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .case-study-footer {
    margin-top: var(--space-6);
    padding-top: var(--space-4);
    border-top: 1px solid var(--border-light);
    text-align: center;
  }

  /* Additional Projects */
  .additional-projects {
    margin-top: var(--space-16);
  }

  .additional-title {
    text-align: center;
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-8);
  }

  .section-header {
    margin-bottom: var(--space-16);
  }

  .section-description {
    max-width: 700px;
    margin: 0 auto;
    font-size: 1.125rem;
    color: var(--text-secondary);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
    gap: var(--space-12);
    margin-bottom: var(--space-20);
  }

  .project-card {
    border-radius: var(--radius-2xl);
    overflow: hidden;
    transition: all var(--transition-normal);
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .project-image-container {
    position: relative;
    overflow: hidden;
    height: 280px;
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .project-card:hover .project-image {
    transform: scale(1.05);
  }

  .project-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(3, 7, 18, 0.8);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .project-card:hover .project-overlay {
    opacity: 1;
  }

  .project-links {
    display: flex;
    gap: var(--space-3);
  }

  .btn-sm {
    padding: var(--space-2) var(--space-4);
    font-size: 0.875rem;
  }

  .project-content {
    padding: var(--space-8);
  }

  .project-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-4);
  }

  .project-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
  }

  .featured-badge {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    background: linear-gradient(135deg, var(--warning), var(--accent));
    color: var(--bg-primary);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .project-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-6);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  /* Tech Stack Section */
  .tech-stack-section {
    border-top: 1px solid var(--border-primary);
    padding-top: var(--space-16);
    text-align: center;
  }

  .tech-stack-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-8);
  }

  .tech-stack-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-3);
    max-width: 800px;
    margin: 0 auto;
  }

  .tech-item {
    background: var(--surface-glass);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    padding: var(--space-3) var(--space-4);
    color: var(--text-secondary);
    font-weight: 500;
    transition: all var(--transition-normal);
    backdrop-filter: blur(16px);
  }

  .tech-item:hover {
    color: var(--primary);
    border-color: var(--primary);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .project-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-2);
    }

    .project-links {
      flex-direction: column;
      width: 100%;
    }

    .btn-sm {
      width: 100%;
      justify-content: center;
    }

    .tech-stack-grid {
      gap: var(--space-2);
    }

    .tech-item {
      padding: var(--space-2) var(--space-3);
      font-size: 0.875rem;
    }
  }
</style>