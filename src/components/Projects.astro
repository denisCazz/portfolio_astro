---
const projects = [
  {
    title: "LangAmore Pollenzo",
    description: "Sito web per una Guest House in Piemonte. Sito realizzato con Astro e Tailwind CSS con un design moderno e accattivante.",
    image: "/langamore.jpg",
    tags: ["Astro", "Tailwind", "SEO"],
    link: "https://www.langamorepollenzo.it/",
  },
  {
    title: "Sartoria Kristina",
    description: "Sito vetrina elegante per una sartoria artigianale nel cuore di Carmagnola. Sito realizzato con Astro e Tailwind CSS che mira ad essere SEO-friendly. Focus principale sull'esperienza utente e facilitÃ  nel reperimento delle informazioni.",
    image: "/sartoria.png",
    tags: ["Astro", "Tailwind", "SEO"],
    link: "https://sartoriakristina.it/",
  },
];
const education = [
  {
    year: "2015-2021",
    title: "Diploma in Informatica",
    school: "IIS Vallauri - Fossano",
  },
  {
    year: "2021-2024",
    title: "Laurea L-31 in Informatica",
    school: "UniPegaso",
  },
  {
    year: "2024",
    title: "Master in Intelligenza Artificiale",
    school: "Politecnico di Torino",
  },
];
---
<section id="projects" class="projects">
  <h2><span class="icon">ðŸ’¡</span> Projects</h2>
  <div class="projects-grid">
    {projects.map((project) => (
      <a href={project.link} target="_blank" class="project-card">
        <div class="project-image">
          <img src={project.image} alt={project.title} loading="lazy" />
          <div class="image-overlay"></div>
        </div>
        <div class="project-info">
          <h3>{project.title}</h3>
          <p>{project.description}</p>
          <div class="tags">
            {project.tags.map((tag) => (
              <span class="tech-tag">{tag}</span>
            ))}
          </div>
        </div>
      </a>
    ))}
  </div>
</section>

<section id="education" class="education">
  <h2><span class="icon">ðŸ“š.</span> Education</h2>
  <div class="timeline">
    {education.map((edu) => (
      <div class="timeline-item">
        <div class="year">{edu.year}</div>
        <div class="details">
          <h3>{edu.title}</h3>
          <p>{edu.school}</p>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  :root {
    --bg-color: #121212;
    --card-bg: #1e1e1e;
    --text-color: #e0e0e0;
    --accent-color: #00ffaa;
    --shadow-color: rgba(0, 0, 0, 0.3);
    --border-color: rgba(0, 255, 170, 0.1);
    --code-font: 'Roboto Mono', monospace;
  }
  body {
    font-family: 'Roboto', sans-serif;
    background-color: var(--bg-color);
    color: var(--text-color);
  }
  .icon {
    margin-right: 0.5rem;
    color: var(--accent-color);
  }
  .projects,
  .education {
    padding: 4rem 2rem;
  }
  h2 {
    text-align: center;
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: var(--text-color);
  }
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2.5rem;
  }
  .project-card {
    background: var(--card-bg);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--border-color);
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
    box-shadow: 0 6px 10px var(--shadow-color);
  }
  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 10px 16px var(--shadow-color);
  }
  .project-image {
    position: relative;
    overflow: hidden;
  }
  .project-card img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    display: block;
    transition: transform 0.3s, opacity 0.3s;
  }
  .project-card:hover img {
    transform: scale(1.05);
    opacity: 0.7;
  }
  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 0;
    transition: opacity 0.3s;
  }
  .project-card:hover .image-overlay {
    opacity: 1;
  }
  .project-info {
    padding: 1.75rem;
    font-family: var(--code-font);
  }
  .project-info h3 {
    font-size: 1.3rem;
    font-weight: 500;
    margin-bottom: 0.75rem;
    color: var(--text-color);
  }
  .project-info p {
    font-size: 1.05rem;
    color: #ddd;
  }
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
    margin-top: 1.25rem;
  }
  .tech-tag {
    background-color: rgba(0, 255, 170, 0.15);
    color: var(--accent-color);
    padding: 0.5rem 1rem;
    border-radius: 5px;
    font-size: 0.9rem;
    border: 1px solid rgba(0, 255, 170, 0.3);
    transition: background-color 0.2s, color 0.2s;
  }
  .tech-tag:hover {
    background-color: rgba(0, 255, 170, 0.3);
    color: #222;
  }
  .timeline {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .timeline-item {
    position: relative;
    padding: 1.5rem;
    background: var(--card-bg);
    border-radius: 10px;
    width: 80%;
    margin-bottom: 2.5rem;
    text-align: left;
    border: 1px solid var(--border-color);
    backdrop-filter: blur(10px);
    box-shadow: 0 2px 4px var(--shadow-color);
    transition: transform 0.2s, box-shadow 0.2s;
    font-family: var(--code-font);
  }
  .timeline-item:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 8px var(--shadow-color);
  }
  .year {
    font-size: 1.2rem;
    font-weight: 500;
    color: var(--accent-color);
    margin-bottom: 0.75rem;
  }
  .details h3 {
    font-size: 1.15rem;
    font-weight: 500;
    color: var(--text-color);
    margin-bottom: 0.5rem;
  }
  .details p {
    font-size: 1rem;
    color: #ddd;
  }
  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
    .timeline-item {
      width: 95%;
    }
  }
</style>