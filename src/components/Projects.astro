---
// src/components/Projects.astro
const projects = [
  {
    title: "Progetto 1",
    description: "Un progetto innovativo con React e Node.js",
    image: "/project1.jpg",
    tags: ["React", "Node.js", "MongoDB"],
  },
  {
    title: "Progetto 2",
    description: "Un'applicazione mobile con Flutter",
    image: "/project2.jpg",
    tags: ["Flutter", "Dart", "Firebase"],
  },
];
---

<section id="projects" class="projects">
  <h2>I miei progetti</h2>
  <div class="projects-container">
    {projects.map((project) => (
      <div class="project-card">
        <img src={project.image} alt={project.title} />
        <div class="project-info">
          <h3>{project.title}</h3>
          <p>{project.description}</p>
          <div>
            {project.tags.map((tag) => (
              <span class="tech-tag">{tag}</span>
            ))}
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
<style>
  .projects {
    padding: 2rem;
    background: var(--dark);
  }
  .projects h2 {
    color: var(--light);
    text-align: center;
    margin-bottom: 2rem;
  }
  .project-card {
    background: var(--darker);
    border-radius: 10px;
    overflow: hidden;
    border: 1px solid var(--border-color);
  }
  .project-card h3 {
    color: var(--light);
  }
  .project-card p {
    color: var(--light);
    opacity: 0.8;
  }
</style>