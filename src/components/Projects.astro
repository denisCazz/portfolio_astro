---
const projects = [
  {
    title: "LangAmore Pollenzo",
    description: "Guest House elegante in Piemonte con sito web moderno e user-friendly. Design responsivo ottimizzato per conversioni e esperienza utente eccellente.",
    image: "langamore.jpg",
    tags: ["Astro", "Tailwind CSS", "SEO", "Responsive"],
    link: "https://www.langamorepollenzo.it/",
    github: null,
    featured: true
  },
  {
    title: "Sartoria Kristina",
    description: "Sito vetrina elegante per sartoria artigianale. Focus su storytelling, portfolio visivo e ottimizzazione per motori di ricerca locali.",
    image: "sartoria.png",
    tags: ["Astro", "Tailwind CSS", "Local SEO", "Portfolio"],
    link: "https://sartoriakristina.it/",
    github: null,
    featured: true
  }
];

const education = [
  {
    year: "2023",
    title: "Master in Intelligenza Artificiale",
    school: "Università degli Studi di Torino"
  },
  {
    year: "2021",
    title: "Laurea in Informatica",
    school: "Politecnico di Milano"
  }
];


const techStack = [
  "React", "Vue.js", "Astro", "Next.js", "TypeScript", "Python", 
  "Node.js", "PostgreSQL", "MongoDB", "AWS", "Docker", "AI/ML"
];
---

<section id="projects" class="projects-section">
  <div class="container">
    <div class="section-header text-center">
      <h2>Progetti in Evidenza</h2>
      <p class="section-description">
        Una selezione dei miei lavori più significativi, che dimostrano le mie competenze 
        tecniche e la capacità di creare soluzioni innovative.
      </p>
    </div>

    <div class="projects-grid">
      {projects.map((project, index) => (
        <article class="project-card glass glass-hover" data-aos="fade-up" data-aos-delay={index * 200}>
          <div class="project-image-container">
            <img 
              src={project.image} 
              alt={project.title} 
              class="project-image"
              loading="lazy" 
            />
            <div class="project-overlay">
              <div class="project-links">
                <a 
                  href={project.link} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="btn btn-primary btn-sm"
                  aria-label={`Visita ${project.title}`}
                >
                  <i class="fas fa-external-link-alt"></i>
                  Live Demo
                </a>
                {project.github && (
                  <a 
                    href={project.github} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="btn btn-secondary btn-sm"
                    aria-label={`Codice sorgente di ${project.title}`}
                  >
                    <i class="fab fa-github"></i>
                    Codice
                  </a>
                )}
              </div>
            </div>
          </div>
          
          <div class="project-content">
            <div class="project-header">
              <h3 class="project-title">{project.title}</h3>
              {project.featured && (
                <span class="featured-badge">
                  <i class="fas fa-star"></i>
                  Featured
                </span>
              )}
            </div>
            
            <p class="project-description">{project.description}</p>
            
            <div class="project-tags">
              {project.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Tech Stack Section -->
    <div class="tech-stack-section">
      <h3 class="tech-stack-title text-center">Tecnologie che utilizzo</h3>
      <div class="tech-stack-grid">
        {techStack.map((tech, index) => (
          <div 
            class="tech-item" 
            data-aos="fade-in" 
            data-aos-delay={index * 50}
          >
            {tech}
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .projects-section {
    background: var(--bg-primary);
  }

  .section-header {
    margin-bottom: var(--space-16);
  }

  .section-description {
    max-width: 700px;
    margin: 0 auto;
    font-size: 1.125rem;
    color: var(--text-secondary);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
    gap: var(--space-12);
    margin-bottom: var(--space-20);
  }

  .project-card {
    border-radius: var(--radius-2xl);
    overflow: hidden;
    transition: all var(--transition-normal);
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .project-image-container {
    position: relative;
    overflow: hidden;
    height: 280px;
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .project-card:hover .project-image {
    transform: scale(1.05);
  }

  .project-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(3, 7, 18, 0.8);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .project-card:hover .project-overlay {
    opacity: 1;
  }

  .project-links {
    display: flex;
    gap: var(--space-3);
  }

  .btn-sm {
    padding: var(--space-2) var(--space-4);
    font-size: 0.875rem;
  }

  .project-content {
    padding: var(--space-8);
  }

  .project-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-4);
  }

  .project-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0;
  }

  .featured-badge {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    background: linear-gradient(135deg, var(--warning), var(--accent));
    color: var(--bg-primary);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .project-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-6);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  /* Tech Stack Section */
  .tech-stack-section {
    border-top: 1px solid var(--border-primary);
    padding-top: var(--space-16);
    text-align: center;
  }

  .tech-stack-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-8);
  }

  .tech-stack-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-3);
    max-width: 800px;
    margin: 0 auto;
  }

  .tech-item {
    background: var(--surface-glass);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    padding: var(--space-3) var(--space-4);
    color: var(--text-secondary);
    font-weight: 500;
    transition: all var(--transition-normal);
    backdrop-filter: blur(16px);
  }

  .tech-item:hover {
    color: var(--primary);
    border-color: var(--primary);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .project-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-2);
    }

    .project-links {
      flex-direction: column;
      width: 100%;
    }

    .btn-sm {
      width: 100%;
      justify-content: center;
    }

    .tech-stack-grid {
      gap: var(--space-2);
    }

    .tech-item {
      padding: var(--space-2) var(--space-3);
      font-size: 0.875rem;
    }
  }
</style>