---
// src/components/Skills.astro
const skills = [
  { icon: "fab fa-react", title: "Frontend Development", progress: 90 },
  { icon: "fab fa-node-js", title: "Backend Development", progress: 85 },
  { icon: "fab fa-js", title: "JavaScript", progress: 95 },
];
---

<section id="skills" class="skills">
  <h2>Le mie competenze</h2>
  <div class="skills-grid">
    {skills.map((skill) => (
      <div class="skill-card">
        <i class={skill.icon}></i>
        <h3>{skill.title}</h3>
        <div class="progress-container">
          <div class="progress-bar" style={`width: ${skill.progress}%`}></div>
        </div>
      </div>
    ))}
  </div>
</section>
<style>
  .skills {
    padding: 2rem;
    background: var(--dark);
  }
  .skills h2 {
    color: var(--light);
    text-align: center;
    margin-bottom: 2rem;
  }
  .skill-card {
    background: var(--darker);
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
    transition: transform 0.3s ease;
  }
  .skill-card h3 {
    color: var(--light);
  }
</style>