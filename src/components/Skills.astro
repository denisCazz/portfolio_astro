---
// src/components/Skills.astro
const skills = [
  { 
    icon: "fas fa-brain", 
    title: "Intelligenza Artificiale", 
    progress: 90, 
    description: "Large Language Models, Machine Learning, Deep Learning",
    color: "var(--primary)"
  },
  { 
    icon: "fab fa-python", 
    title: "Python", 
    progress: 85, 
    description: "Data Science, AI/ML, Backend Development, Automation",
    color: "var(--accent)"
  },
  { 
    icon: "fab fa-js-square", 
    title: "JavaScript/TypeScript", 
    progress: 95, 
    description: "React, Vue, Node.js, Modern Web Development",
    color: "var(--warning)"
  },
  { 
    icon: "fas fa-cloud", 
    title: "Cloud & DevOps", 
    progress: 80, 
    description: "AWS, Docker, Kubernetes, CI/CD, Infrastructure as Code",
    color: "var(--secondary)"
  },
  { 
    icon: "fas fa-database", 
    title: "Database", 
    progress: 85, 
    description: "SQL, NoSQL, Oracle, PostgreSQL, MongoDB",
    color: "var(--accent)"
  },
  { 
    icon: "fas fa-mobile-alt", 
    title: "Full Stack", 
    progress: 90, 
    description: "Frontend, Backend, API Design, Mobile Development",
    color: "var(--primary)"
  }
];

const getLevel = (progress: number) => {
  if (progress >= 90) return { text: "Esperto", color: "var(--accent)" };
  else if (progress >= 75) return { text: "Avanzato", color: "var(--primary)" };
  else if (progress >= 50) return { text: "Intermedio", color: "var(--warning)" };
  else return { text: "Base", color: "var(--secondary)" };
};
---

<section id="skills" class="skills-section">
  <div class="container">
    <div class="section-header text-center">
      <h2>Skills & Competenze</h2>
      <p class="section-description">
        Le tecnologie e competenze che utilizzo per creare soluzioni innovative
      </p>
    </div>
    
    <div class="skills-grid">
      {skills.map((skill, index) => {
        const level = getLevel(skill.progress);
        return (
          <div class="skill-card glass glass-hover" data-aos="fade-up" data-aos-delay={index * 100}>
            <div class="skill-header">
              <div class="skill-icon" style={`color: ${skill.color}`}>
                <i class={skill.icon}></i>
              </div>
              <div class="skill-info">
                <h3 class="skill-name">{skill.title}</h3>
                <span class="skill-level" style={`color: ${level.color}`}>
                  {level.text}
                </span>
              </div>
            </div>
            
            <p class="skill-description">{skill.description}</p>
            
            <div class="skill-progress">
              <div class="progress-container">
                <div class="progress-bar" style={`width: ${skill.progress}%; background: linear-gradient(90deg, ${skill.color}, ${skill.color}80)`}></div>
              </div>
              <span class="progress-text">{skill.progress}%</span>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>

<style>
  .skills-section {
    background: var(--bg-secondary);
  }

  .section-header {
    margin-bottom: var(--space-16);
  }

  .section-description {
    max-width: 600px;
    margin: 0 auto;
    font-size: 1.125rem;
    color: var(--text-secondary);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-8);
  }

  .skill-card {
    padding: var(--space-8);
    border-radius: var(--radius-xl);
    position: relative;
    overflow: hidden;
  }

  .skill-header {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .skill-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: var(--bg-tertiary);
    border-radius: var(--radius-lg);
    font-size: 1.75rem;
    border: 1px solid var(--border-primary);
  }

  .skill-info {
    flex: 1;
  }

  .skill-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 var(--space-1) 0;
  }

  .skill-level {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .skill-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-6);
  }

  .skill-progress {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .progress-container {
    flex: 1;
    height: 8px;
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    overflow: hidden;
    position: relative;
  }

  .progress-bar {
    height: 100%;
    border-radius: var(--radius-md);
    transition: width 1s ease-out 0.5s;
    position: relative;
  }

  .progress-bar::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    animation: shimmer 2s infinite;
  }

  .progress-text {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-primary);
    min-width: 40px;
    text-align: right;
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .skill-card {
      padding: var(--space-6);
    }

    .skill-icon {
      width: 50px;
      height: 50px;
      font-size: 1.5rem;
    }

    .skill-name {
      font-size: 1.125rem;
    }
  }
</style>

  